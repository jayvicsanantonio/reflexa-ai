{
  "name": "reflexa-ai-chrome-extension",
  "version": "1.0.0",
  "description": "A wellness-centered Chrome Extension that transforms everyday reading into calm, reflective micro-sessions",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:watch": "vite build --watch --mode development",
    "build": "npm run check && npm run test && vite build",
    "build:dev": "vite build --mode development",
    "build:prod": "npm run check && vite build --mode production",
    "build:only": "vite build",
    "preview": "vite preview",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "type-check": "tsc --noEmit",
    "generate:icons": "node scripts/generate-icons.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "package": "npm run build:prod && node scripts/package-extension.js",
    "package:dev": "npm run build:dev && node scripts/package-extension.js",
    "prepare": "husky"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.2.1",
    "@eslint/js": "^9.38.0",
    "@tailwindcss/vite": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "^0.0.268",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.9.1",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-window": "^2.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/ui": "^4.0.4",
    "archiver": "^7.0.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "happy-dom": "^20.0.8",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.5.2",
    "typescript-eslint": "^8.46.2",
    "vite": "^5.3.1",
    "vitest": "^4.0.4"
  }
}
