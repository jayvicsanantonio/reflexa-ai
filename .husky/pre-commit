#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run linting and formatting checks before commit
echo "ğŸ” Running pre-commit checks..."

# Type checking
echo "   Checking types..."
npm run type-check || {
  echo "âŒ Type check failed. Please fix type errors before committing."
  exit 1
}

# Linting
echo "   Running linter..."
npm run lint || {
  echo "âŒ Linting failed. Run 'npm run lint:fix' to auto-fix issues."
  exit 1
}

# Format checking
echo "   Checking formatting..."
npm run format:check || {
  echo "âŒ Formatting check failed. Run 'npm run format' to fix formatting."
  exit 1
}

echo "âœ… Pre-commit checks passed!"
